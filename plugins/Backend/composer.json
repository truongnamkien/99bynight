{
    "name": "vcvn/Backend",
    "description": "Backend plugin for Mom Best Friend",
    "type": "cakephp-plugin",
    "require": {
        "php": ">=5.4.16",
        "cakephp/cakephp": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Backend\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Backend\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
